@page "/new-client"
@inject ISnackbar Snackbar
@inject NavigationManager _navManager



<fieldset class="fieldset" >
    <legend class="legend">  <MudText Align="Align.Center">New Client</MudText></legend>
<MudGrid>
    <!-- Client Info Section -->
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Client Info</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                        <MudItem xs="12" md="6">
                        <MudTextField T="string" Label="Client Name" Variant="Variant.Filled" />
                    </MudItem>
                        <MudItem xs="12" md="6">
                        <MudTextField T="string" Label="Display Name" Variant="Variant.Filled" />
                    </MudItem>
                        <MudItem xs="12" md="6">
                        <MudTextField T="string" Label="Internal ID" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField T="string" Label="Phone" Variant="Variant.Filled" />
                    </MudItem>

                    <MudItem xs="6" md="3">
                        <MudTextField T="string" Label="Ext" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <MudTextField T="string" Label="Fax" Variant="Variant.Filled" />
                    </MudItem>
                        <MudItem xs="12" md="6">
                            <MudTextField T="string" Label="Email" Variant="Variant.Filled" />
                        </MudItem>
                    <MudItem xs="12">
                        <MudTextField T="string" Label="Mailing Address" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField T="string" Label="Address 2" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField T="string" Label="City" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudSelect T="string" Label="State" Variant="Variant.Filled">
                           
                            <!-- Add other states -->
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudTextField T="string" Label="Zip Code" Variant="Variant.Filled" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <!-- Contact Info Section -->
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Contact Info</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="3">
                        <MudSelect T="string" Label="Prefix" Variant="Variant.Filled">
                          
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" md="9">
                        <MudTextField T="string" Label="Contact First Name" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField T="string" Label="Middle Name" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField T="string" Label="Last Name" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudSelect T="string" Label="Suffix" Variant="Variant.Filled">
                            
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField T="string" Label="Phone" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <MudTextField T="string" Label="Ext" Variant="Variant.Filled" />
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <MudTextField T="string" Label="Fax" Variant="Variant.Filled" />
                    </MudItem>
                        <MudItem xs="6" md="3">
                        <MudTextField T="string" Label="Email" Variant="Variant.Filled" />
                    </MudItem>
                        <MudItem xs="12" md="6">
                            <MudSelect T="string" Label="Client Contact" Variant="Variant.Filled">

                            </MudSelect>
                        </MudItem>

                       
                </MudGrid>
                    <!-- Card Actions -->
                    <MudCardActions>
                        <MudSpacer /> <!-- Pushes the buttons to the right -->
                        <MudButton Variant="Variant.Filled" Color="Color.Secondary" DropShadow="false">Cancel</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="margin-left: 20px;">Submit</MudButton>
                        @* <MudButton Variant="Variant.Filled" Color="Color.Primary" class="mt-5" OnClick="HandleSubmit" Size="Size.Large" FullWidth="true">Sign In</MudButton> *@

                    </MudCardActions>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
</fieldset>


